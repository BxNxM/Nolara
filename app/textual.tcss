#title-bar {
    height: 3;
    content-align: center middle;
    background: black;
}

#main-layout {
    height: 1fr;
}

/*************************** SIDEBAR ***************************/

#sidebar {
    width: 25%;
    padding: 1;
    border: solid grey;
    layout: vertical;
    height: 100%;
    padding: 1;
    align-horizontal: left;
    overflow: hidden;
}

#model-feature-label {
    margin: 0 1;           /* 1 line vertical margin, 0 horizontal */
    width: auto;           /* or a fixed width like 30 */
    height: auto;
}

#system-prompt-input {
    height: auto;
    width: 100%;
    border: solid green;
    padding: 1;
}

#prompt-dropdown {
    width: auto;
    padding-top: 1;
    width: 100%;
}

/************************** CHAT AREA  **************************/

#chat-area {
    width: 75%;
}

Log {
    height: 1fr;
    border: solid green;
}

ProgressBar {
    height: 1;
    margin: 0 1;
}

Input, Button {
    height: 3;
}

#input_bar {
    dock: bottom;
    height: auto;
}

#progress-line {
    height: 2;
    padding: 0;
    margin: 0;
    align: center middle;
    layout: horizontal;
}

#send-button {
    dock: right;
}

#speak-button {
    dock:right;
}

/************************** FOOTER  **************************/

#app-footer {
    background: black;
    color: white;
}

